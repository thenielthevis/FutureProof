{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
    "env": {
      "EXPO_PUBLIC_API_URL": "https://futureproof-backend.onrender.com"
    },
    "installCommand": "npm install",
    "framework": null,
    "routes": [
      {
        "src": "/assets/(.*)",
        "dest": "/assets/$1"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      },
      {
        "src": "/videos/(.*)",
        "dest": "/videos/$1"
      }
    ],
    "staticFiles": {
      "include": ["assets/**", "public/**", "videos/**"]
    }
  }
  